@model List<Student>
@{
    ViewData["Title"] = "Home Page";
}

<p><a class="btn btn-primary" asp-controller="Home" asp-action="Create">Add</a></p>
<div class="text-center">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Standerd</th>
                <th>Contact</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.Standerd</td>
                <td>@item.Contact</td>
                <td><p><a class="btn btn-danger" asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Delete</a></p></td>
            </tr>
            }
        </tbody>
</table>
</div>
